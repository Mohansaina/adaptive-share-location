{
  "expo": {
    "name": "adaptive-location-share",
    "slug": "adaptive-location-share",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app uses location to share your position with contacts.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app uses location in the background to share your position with contacts.",
        "UIBackgroundModes": [
          "location"
        ]
      }
    },
    "android": {
      "edgeToEdgeEnabled": true,
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "WAKE_LOCK"
      ],
      "foregroundService": {
        "location": {
          "notificationTitle": "Location Sharing Active",
          "notificationBody": "Sharing your location adaptively"
        }
      }
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location."
        }
      ]
    ]
  }
}